---
import BaseLayout from '../../../layouts/BaseLayout.astro';
---

<BaseLayout
  title="Contacto"
  seoTitle="Contacto"
  seoDescription="Contacta con el equipo de Gacha Plus. Envianos tus preguntas, sugerencias o comentarios sobre el mod de Gacha Club."
  lang="es"
  canonicalUrl="https://gacha.plus/es/contacto/"
  hreflangLinks={[
  { lang: "en", href: "https://gacha.plus/contact/" },
  { lang: "es", href: "https://gacha.plus/es/contacto/" },
  { lang: "fr", href: "https://gacha.plus/fr/contactez/" },
  { lang: "de", href: "https://gacha.plus/de/kontakt/" },
  { lang: "it", href: "https://gacha.plus/it/contatto/" },
  { lang: "pt", href: "https://gacha.plus/pt/contato/" }
  ]}
>
  <h1>Contacto</h1>
  <Fragment set:html=`<form class="contact-form" action="https://formsubmit.co/admin@gacha.plus" method="POST">
  <label for="name">Nombre</label>
  <input type="text" id="name" name="name" required />
  <label for="email">Correo</label>
  <input type="email" id="email" name="email" required />
  <label for="website">Sitio web</label>
  <input type="url" id="website" name="website" />
  <label for="message">Mensaje</label>
  <textarea id="message" name="message"></textarea>
  <button type="submit">Enviar</button>
</form>` />
</BaseLayout>

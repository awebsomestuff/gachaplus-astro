---
interface Props {
  title: string;
  seoTitle?: string;
  seoDescription?: string;
  lang?: string;
  canonicalUrl?: string;
  hreflangLinks?: { lang: string; href: string }[];
}

const {
  title,
  seoTitle,
  seoDescription,
  lang = 'en',
  canonicalUrl,
  hreflangLinks = [],
} = Astro.props;

const pageTitle = seoTitle || title;

const navItems: Record<string, { home: string; homeHref: string; contact: string; contactHref: string }> = {
  en: { home: 'Home', homeHref: '/', contact: 'Contact', contactHref: '/contact/' },
  es: { home: 'Inicio', homeHref: '/es/app/', contact: 'Contacto', contactHref: '/es/contacto/' },
  fr: { home: 'Accueil', homeHref: '/fr/mod/', contact: 'Contactez', contactHref: '/fr/contactez/' },
  de: { home: 'Startseite', homeHref: '/de/herunterladen/', contact: 'Kontakt', contactHref: '/de/kontakt/' },
  it: { home: 'Home', homeHref: '/it/scaricare/', contact: 'Contatto', contactHref: '/it/contatto/' },
  pt: { home: 'Inicio', homeHref: '/pt/baixar/', contact: 'Contato', contactHref: '/pt/contato/' },
};

const langSwitcher: Record<string, { label: string; href: string }> = {
  en: { label: 'English', href: '/' },
  es: { label: 'Espanol', href: '/es/app/' },
  fr: { label: 'Francais', href: '/fr/mod/' },
  de: { label: 'Deutsch', href: '/de/herunterladen/' },
  it: { label: 'Italiano', href: '/it/scaricare/' },
  pt: { label: 'Portugues', href: '/pt/baixar/' },
};

const nav = navItems[lang] || navItems.en;
const currentYear = new Date().getFullYear();
const ogImage = canonicalUrl ? 'https://gacha.plus/images/Gacha-Plus-Download.webp' : '/images/Gacha-Plus-Download.webp';
const pageUrl = canonicalUrl || 'https://gacha.plus/';

const isHomepage = [
  'https://gacha.plus/',
  'https://gacha.plus/es/app/',
  'https://gacha.plus/fr/mod/',
  'https://gacha.plus/de/herunterladen/',
  'https://gacha.plus/it/scaricare/',
  'https://gacha.plus/pt/baixar/',
].includes(pageUrl);
---

<!DOCTYPE html>
<html lang={lang}>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{pageTitle}</title>
  {seoDescription && <meta name="description" content={seoDescription} />}
  <link rel="icon" type="image/webp" href="/images/logo.webp" />
  {canonicalUrl && <link rel="canonical" href={canonicalUrl} />}
  {hreflangLinks.map((link) => (
    <link rel="alternate" hreflang={link.lang} href={link.href} />
  ))}
  <meta property="og:type" content="website" />
  <meta property="og:title" content={pageTitle} />
  {seoDescription && <meta property="og:description" content={seoDescription} />}
  <meta property="og:url" content={pageUrl} />
  <meta property="og:image" content={ogImage} />
  <meta property="og:image:width" content="350" />
  <meta property="og:image:height" content="193" />
  <meta property="og:site_name" content="Gacha Plus" />
  <meta property="og:locale" content={lang} />
  <meta name="twitter:card" content="summary" />
  <meta name="twitter:title" content={pageTitle} />
  {seoDescription && <meta name="twitter:description" content={seoDescription} />}
  <meta name="twitter:image" content={ogImage} />
  {isHomepage && (
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "SoftwareApplication",
      "name": "Gacha Plus",
      "operatingSystem": "Android, Windows, Linux, MacOS",
      "applicationCategory": "GameApplication",
      "offers": {
        "@type": "Offer",
        "price": "0",
        "priceCurrency": "USD"
      },
      "softwareVersion": "1.2.0",
      "datePublished": "2023-02-10",
      "description": seoDescription || "Gacha Plus is a Gacha Club mod with new outfits, accessories and HD backgrounds by FemLol Studio, Beowulf and Gacha Emika.",
      "image": "https://gacha.plus/images/Gacha-Plus-Download.webp",
      "url": pageUrl,
      "author": {
        "@type": "Organization",
        "name": "FemLol Studio, Beowulf and Gacha Emika"
      }
    })} />
  )}
</head>
<body>
  <header class="site-header">
    <div class="header-inner">
      <a href={nav.homeHref} class="site-logo">
        <img src="/images/logo.webp" alt="Gacha Plus" width="350" height="70" fetchpriority="high" />
      </a>
      <nav class="main-nav">
        <ul>
          <li><a href={nav.homeHref}>{nav.home}</a></li>
          <li><a href={nav.contactHref}>{nav.contact}</a></li>
        </ul>
      </nav>
    </div>
  </header>

  <main class="site-content">
    <div class="content-inner">
      <slot />
    </div>
  </main>

  <footer class="site-footer">
    <div class="footer-inner">
      <p>&copy; {currentYear} Gacha.Plus</p>
      <div class="footer-links">
        <a href="/privacy-policy/">Privacy Policy</a>
        <a href="/terms-of-service/">Terms of Service</a>
      </div>
      <div class="language-switcher">
        {Object.entries(langSwitcher)
          .filter(([code]) => code !== lang)
          .map(([code, { label, href }]) => (
            <a href={href}>{label}</a>
          ))}
      </div>
    </div>
  </footer>
  <script is:inline>
    document.addEventListener('click', function(e) {
      var facade = e.target.closest('.youtube-facade');
      if (!facade) return;
      var iframe = document.createElement('iframe');
      iframe.src = 'https://www.youtube.com/embed/' + facade.dataset.id + '?autoplay=1&controls=0';
      iframe.width = '560';
      iframe.height = '315';
      iframe.allow = 'autoplay; encrypted-media';
      iframe.allowFullscreen = true;
      iframe.loading = 'lazy';
      iframe.style.position = 'absolute';
      iframe.style.top = '0';
      iframe.style.left = '0';
      iframe.style.width = '100%';
      iframe.style.height = '100%';
      iframe.style.border = 'none';
      facade.textContent = '';
      facade.style.cursor = 'default';
      facade.appendChild(iframe);
    });
  </script>
</body>
</html>

<style is:global>
  *, *::before, *::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
    color: #222;
    background: #f7f8f9;
    line-height: 1.6;
  }

  a {
    color: #1a16e5;
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }

  img {
    max-width: 100%;
    height: auto;
  }

  /* Header */
  .site-header {
    background: #fff;
    border-bottom: 1px solid #e0e0e0;
    padding: 10px 0;
  }

  .header-inner {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 20px;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .site-logo img {
    height: 40px;
    width: 200px;
    aspect-ratio: 350 / 70;
  }

  .main-nav ul {
    list-style: none;
    display: flex;
    gap: 20px;
  }

  .main-nav a {
    color: #222;
    font-weight: 600;
    font-size: 15px;
  }

  .main-nav a:hover {
    color: #1a16e5;
    text-decoration: none;
  }

  /* Main Content */
  .site-content {
    max-width: 1100px;
    margin: 0 auto;
    padding: 30px 20px;
  }

  .content-inner {
    background: #fff;
    padding: 30px;
    border-radius: 4px;
  }

  h1 {
    text-align: center;
    font-size: 28px;
    margin-bottom: 20px;
  }

  h2 {
    font-size: 22px;
    margin: 25px 0 15px;
  }

  h3 {
    font-size: 19px;
    margin: 20px 0 12px;
  }

  h4 {
    font-size: 17px;
    margin: 15px 0 10px;
  }

  p {
    margin-bottom: 15px;
  }

  ol, ul {
    margin: 0 0 15px 25px;
  }

  li {
    margin-bottom: 5px;
  }

  /* Download Box */
  .caja-descarga {
    background-color: rgba(241, 241, 241, .5);
    padding: 20px 30px 5px 30px;
    margin-bottom: 20px;
  }

  /* Columns */
  .su-row {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    margin-bottom: 15px;
  }

  .su-column-half {
    flex: 1;
    min-width: 280px;
  }

  .su-column-third {
    flex: 1;
    min-width: 200px;
  }

  /* Buttons */
  .su-button {
    display: block;
    text-align: center;
    padding: 12px 20px;
    border-radius: 4px;
    font-size: 16px;
    font-weight: 600;
    text-decoration: none !important;
    margin-bottom: 10px;
    transition: opacity 0.2s;
  }

  .su-button:hover {
    opacity: 0.9;
    text-decoration: none !important;
  }

  .su-button .fa,
  .su-button .fa-download {
    margin-right: 8px;
  }

  .su-button .fa-download::before {
    content: "\2B07";
  }

  .su-button-home {
    background: #add6f2;
    color: #000 !important;
  }

  .su-button-download {
    background: #6003f7;
    color: #fce4f9 !important;
  }

  /* Table */
  .su-table {
    width: 100%;
    overflow-x: auto;
    margin-bottom: 15px;
  }

  .su-table table {
    width: 100%;
    border-collapse: collapse;
  }

  .su-table td {
    padding: 8px 12px;
    border: 1px solid #e0e0e0;
  }

  .su-table tr:nth-child(even) {
    background: #f9f9f9;
  }

  /* Feature Box */
  .su-box {
    border: 2px solid #6003f7;
    border-radius: 5px;
    margin: 20px 0;
  }

  .su-box-title {
    background: #6003f7;
    color: #fff;
    padding: 10px 15px;
    font-weight: 700;
    font-size: 16px;
  }

  .su-box-content {
    padding: 15px;
  }

  /* Accordion / Spoiler */
  .su-accordion {
    margin: 15px 0;
  }

  .su-spoiler {
    border: 1px solid #e0e0e0;
    border-radius: 4px;
    margin-bottom: 5px;
  }

  .su-spoiler summary {
    padding: 12px 15px;
    cursor: pointer;
    font-weight: 600;
    font-size: 15px;
    background: #f9f9f9;
    list-style: none;
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .su-spoiler summary::-webkit-details-marker {
    display: none;
  }

  .su-spoiler summary::before {
    content: '+';
    font-weight: 700;
    font-size: 18px;
    color: #6003f7;
    flex-shrink: 0;
  }

  .su-spoiler[open] summary::before {
    content: '-';
  }

  .su-spoiler-content {
    padding: 15px;
  }

  /* Image Gallery Scroll */
  .outer {
    padding: 0;
    width: 100%;
    margin-bottom: 20px;
  }

  .flex-container {
    overflow-x: auto;
    padding-bottom: 10px;
    display: flex;
    flex-wrap: nowrap;
  }

  .card {
    flex: 0 0 200px;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    margin-right: 10px;
    font-size: 14px;
    font-weight: 600;
  }

  .card p {
    margin: 0;
  }

  .card img {
    width: 200px;
    height: auto;
    aspect-ratio: 350 / 185;
    border-radius: 6px;
    margin-bottom: 6px;
  }

  /* Features grid */
  .gacha-features {
    position: relative;
    float: left;
    width: 20%;
    margin-left: 5%;
    font-size: 14px;
  }

  .galeria-final {
    position: relative;
    float: left;
    width: 100%;
  }

  .galeria-final img {
    position: relative;
    float: left;
    width: 200px;
  }

  .elemento-galeria {
    font-size: 16px;
    text-align: center;
    position: relative;
    float: left;
    padding-bottom: 20px;
    margin: 0 0 20px 0;
    min-width: 170px;
    max-width: 170px;
    height: 200px;
    padding-top: 0;
    margin-right: 15px;
  }

  .elemento-galeria img {
    margin: -25px 0 5px 0;
    height: 170px;
    width: 170px;
    border-radius: 20px;
  }

  .elemento-galeria:hover {
    transform: scale(1.05);
  }

  .contenedor-mods {
    position: relative;
    float: left;
    width: 100%;
  }

  /* Center utility */
  .text-center {
    text-align: center;
  }

  .aligncenter {
    display: block;
    margin: 15px auto;
  }

  /* YouTube embed - lite facade */
  .video-container {
    text-align: center;
    margin: 20px 0;
  }

  .video-container iframe {
    max-width: 100%;
  }

  .youtube-facade {
    position: relative;
    width: 100%;
    max-width: 560px;
    aspect-ratio: 16 / 9;
    margin: 0 auto;
    cursor: pointer;
    background-color: #000;
    background-size: cover;
    background-position: center;
    border-radius: 4px;
    overflow: hidden;
  }

  .youtube-facade::before {
    content: "";
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 68px;
    height: 48px;
    background: rgba(255, 0, 0, 0.8);
    border-radius: 14px;
    z-index: 1;
  }

  .youtube-facade::after {
    content: "";
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) translateX(4px);
    border-style: solid;
    border-width: 11px 0 11px 19px;
    border-color: transparent transparent transparent #fff;
    z-index: 2;
  }

  .youtube-facade:hover::before {
    background: rgba(255, 0, 0, 1);
  }

  /* Contact form */
  .contact-form {
    max-width: 600px;
    margin: 0 auto;
  }

  .contact-form label {
    display: block;
    font-weight: 600;
    margin-bottom: 5px;
    margin-top: 15px;
  }

  .contact-form input,
  .contact-form textarea {
    width: 100%;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-family: inherit;
    font-size: 14px;
  }

  .contact-form textarea {
    height: 150px;
    resize: vertical;
  }

  .contact-form button {
    margin-top: 20px;
    background: #6003f7;
    color: #fff;
    border: none;
    padding: 12px 30px;
    border-radius: 4px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
  }

  .contact-form button:hover {
    opacity: 0.9;
  }

  /* Footer */
  .site-footer {
    background: #222;
    color: #aaa;
    padding: 25px 0;
    margin-top: 30px;
    text-align: center;
  }

  .footer-inner {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .footer-inner p {
    margin-bottom: 10px;
  }

  .footer-links {
    margin-bottom: 10px;
  }

  .footer-links a {
    color: #ccc;
    margin: 0 10px;
    font-size: 13px;
  }

  .language-switcher {
    display: flex;
    justify-content: center;
    gap: 15px;
    flex-wrap: wrap;
  }

  .language-switcher a {
    color: #ccc;
    font-size: 13px;
  }

  .language-switcher a:hover {
    color: #fff;
  }

  /* Responsive */
  @media (max-width: 1200px) {
    .gacha-features {
      width: 40%;
      margin-left: 8%;
      height: 0;
    }

    .elemento-galeria {
      min-width: 150px;
      max-width: 150px;
      height: 230px;
    }

    .elemento-galeria img {
      height: 150px;
      width: 150px;
    }

    .card {
      flex: 0 0 160px;
    }

    .card img {
      width: 160px;
    }
  }

  @media (max-width: 768px) {
    .su-row {
      flex-direction: column;
    }

    .su-column-half,
    .su-column-third {
      min-width: 100%;
    }

    .content-inner {
      padding: 20px 15px;
    }

    .caja-descarga {
      padding: 15px;
    }
  }
</style>
